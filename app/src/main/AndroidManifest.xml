<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arabic.restaurants">
    <!-- >This is the permission to save the photo to the gallery -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.arabic.restaurants.Pictures"
            android:exported="false" />
        <activity
            android:name="com.example.arabic.restaurants.Camera"
            android:exported="false" />
        <activity
            android:name="com.example.arabic.restaurants.adminClass"
            android:exported="false"
            android:label="@string/title_activity_admin_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.arabic.restaurants.FeedbackActivity"
            android:exported="false" />
        <activity android:name="com.example.arabic.restaurants.LogIn$LoginSetting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.arabic.restaurants.ListOfFood" />
        <activity android:name="com.example.arabic.restaurants.FASTFOOD" />
        <activity android:name="com.example.arabic.restaurants.Restaurants" />
        <activity android:name="com.example.arabic.restaurants.FastfoodInfo" />
    </application>

</manifest>